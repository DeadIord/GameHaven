@using Web_Application.Controllers
@model Web_Application.Models.Computers
@{
    ViewBag.Title = "Редактирование Компьюетра";
    var a = TempData["Halls"];
}
<form asp-action="EditComputer" asp-controller="Computer"  asp-route-ComputerCode="@Model.ComputerCode">
    <div class="card-3d-wrap mx-auto">
        <div class="card-front">
            <div class="center-wrap">
                <div class="form-group">
                    <label asp-for="ComputerName" class="control-label">Компьютер: </label>
                    <input type="text" asp-for="ComputerName" placeholder="Компьютер" class="form-style" />
                    <span asp-validation-for="ComputerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label">Комплектация:</label>
                    <textarea type="text" cols="40" placeholder="Комплектация" rows="5" asp-for="CompanyName" class="form-style"></textarea>
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <label asp-for="HallsCode" class="control-label">Зал</label>
                <select class="form-style" asp-for="HallsCode">
                    @if (a != null)
                    {
                        @foreach (var item in (List<ComputerController.SelectOptions>)a)
                        {
                            <option value="@item.value">@item.text</option>
                        }

                    }


                </select>
                <span asp-validation-for="HallsCode" class="text-danger"></span>
                <div class="form-group">
                    <label asp-for="DateOfLastService" class="control-label">Дата последнего обслуживания</label>
                    <input type="date" asp-for="DateOfLastService" class="form-style" />
                    <span asp-validation-for="DateOfLastService" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Создать</button>
                    <a asp-action="ListComputer" class="btn btn-primary">Отмена</a>
                </div>
            </div>

        </div>

    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Обновить</button>

    </div>


</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}