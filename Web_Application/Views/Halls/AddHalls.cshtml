@model Web_Application.Models.Halls
@{
    ViewBag.Title = "Добавление зала";
}
<form asp-action="AddHalls" asp-controller="Halls">
    <div class="card-3d-wrap mx-auto">
        <div class="card-front">
            <div class="center-wrap">
            <div class="form-group">
                <label asp-for="NameOfTheHall" class="control-label">Зал</label>
                <input type="text" asp-for="NameOfTheHall"  placeholder="Зал" class="form-style" />
                <span asp-validation-for="NameOfTheHall" class="text-danger"></span>
            </div>
  
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Создать</button>
                    <a asp-action="ListHalls" class="btn btn-primary">Отмена</a>
                </div>
                </div>
            </div>
        </div>
 
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}