@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameHaven</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/File.css" />
    <link rel="stylesheet"  href="~/css/accordion.css" />
    <link rel="stylesheet" href="~/css/Customization.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
</head>
<body>
    <header>
        @if (signInManager.IsSignedIn(User))
        {
            <input class="menu-icon" type="checkbox" style="position: absolute; left: -9999px;" id="menu-icon" name="menu-icon" />
            <label for="menu-icon"></label>
            <nav class="nav">
                <ul class="pt-5">
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Dev") || User.IsInRole("Admin"))
                    {

                        <li >
                            <a asp-controller="Services" asp-action="ListServices">Услуги </a>
                        </li>
                        <li>
                            <a asp-controller="Computer" asp-action="ListComputer">Компьютеры </a>
                        </li>
                        <li>
                            <a asp-controller="Halls" asp-action="ListHalls">Залы </a>
                        </li>
                        <li>
                            <a asp-controller="Visitor" asp-action="ListVisitor">Посетители </a>
                        </li>
                        <li>
                            <a asp-controller="Visiting" asp-action="ListVisiting">Посещение </a>
                        </li>
                        <li>
                            <a asp-controller="UserRoles" asp-action="Index">Управление ролями </a>
                        </li>
                        <li>
                            <a asp-controller="User" asp-action="ListUsers">Управление сотрудниками </a>
                        </li>

                    }
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Employee"))
                    {
                        <li>
                            <a asp-controller="Services" asp-action="ListServices">Услуги </a>
                        </li>
                        <li>
                            <a asp-controller="Computer" asp-action="ListComputer">Компьютеры </a>
                        </li>
                        <li>
                            <a asp-controller="Halls" asp-action="ListHalls">Залы </a>
                        </li>
                        <li>
                            <a asp-controller="Visitor" asp-action="ListVisitor">Посетители </a>
                        </li>
                        <li>
                            <a asp-controller="Visiting" asp-action="ListVisiting">Посещение </a>
                        </li>
                    }
                </ul>
            </nav>
        }
       

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GameHaven</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-flex flex-sm-row justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                     
                     
                    </ul>
                  
                    <partial name="_LoginPartial" />
                   
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
